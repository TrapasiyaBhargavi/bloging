<%- include("../header") %>


      <!--end::Sidebar-->
      <!--begin::App Main-->
      <main class="app-main">
        <!--begin::App Content Header-->
        <div class="app-content-header">
          <!--begin::Container-->
          <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
              <div class="col-sm-6"><h3 class="mb-0">Admin</h3></div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                  <li class="breadcrumb-item"><a href="#">Home</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Simple Tables</li>
                </ol>
              </div>
            </div>
            <!--end::Row-->
          </div>
          <!--end::Container-->
        </div>
        <!--end::App Content Header-->
        <!--begin::App Content-->
        <div class="app-content">
          <!--begin::Container-->
          <div class="container-fluid">
            <!--begin::Row-->
          
              
              <!-- /.col -->
             
            
              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">View comment Data</h3>
                 
                </div>

               
                <!-- /.card-header -->
                 
                <div class="card-body">
                  <table class="table table-striped">
                    <thead>
                      <tr>
<!--                        
                        <th><input type="checkbox"  id="checkAll"/>
                        <button id="deleteall" type="submit"><i class="bi bi-trash3"></i></button></th> -->
                          <th>#</th>
                          <th>User Name</th>
                          <th>User Email</th>
                         
                          <th>Imges</th>
                          <th>Comment</th>
                          <th>Category status</th>
                      
                        
                        

                      </tr>
                    </thead>
              
                    <tbody>
                      <% commentshow.map((v,i)=>{ %>
                     
                        <tr class="align-middle">
                            <!-- <td><input type="checkbox" name="Ids" value="<%= v.id %>"/></td> -->
                            <td><%= i+1 %></td>
                            <td><%= v.username %></td>
                            <td><%= v.useremail %></td>
                           <td> <img src="<%= v.images %>" width="100px"/></td>
                            <td><%= v.usercomment %></td>
                            <td>
                              <% if(v.blogstatus) { %>
                              <a href="/changestatustrue/?camid=<%= v.id %>&blogstatus=true"  class="btn btn-success">Active</a>
                              <% } else { %>
                              <a href="/changestatusfalse/?camid=<%= v.id %>&blogstatus=false"  class="btn btn-danger">Deactive</a>
                              <% } %>
                            </td>
                          
                           
                          </tr>
                    <%   }) %>
             
                     
                     
                    </tbody>
                  </table>
                </div>
                <!-- /.card-body -->
              </div>
            

            
                   
                <!-- /.card -->
                
                <!-- /.card -->
             
              <!-- /.col -->
            
            <!--end::Row-->
          </div>
          <!--end::Container-->
        </div>
        <!--end::App Content-->
      </main>
      <!--end::App Main-->
